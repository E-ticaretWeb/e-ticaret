@model E_SHOPPING_WEB_SITE.Models.Register

@{
    ViewBag.Title = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/Content/css/login-register.css" />
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <h2>Register</h2>
            <p>Create an account and join us!</p>
        </div>

        <!-- kayıttan sonraki başarılı mesajı-->

        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <div class="alert alert-success">
                @ViewBag.SuccessMessage
            </div>
        }

        <!-- hata mesajının görüneceği yer-->

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="auth-form">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-input", placeholder = "First Name" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

                @Html.TextBoxFor(m => m.Surname, new { @class = "form-input", placeholder = "Last Name" })
                @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })

                @Html.TextBoxFor(m => m.Email, new { @class = "form-input", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                @Html.TextBoxFor(m => m.Username, new { @class = "form-input", placeholder = "Username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

                @Html.PasswordFor(m => m.Password, new { @class = "form-input", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                @Html.PasswordFor(m => m.RePassword, new { @class = "form-input", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(m => m.RePassword, "", new { @class = "text-danger" })

                <button type="submit" class="btn-primary">Register</button>
            </div>
        }

        <div class="auth-footer">
            <p>Already have an account? <a href="/Account/Login">Login Now</a></p>
        </div>
    </div>
</div>
