<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/layout.js"></script>
    <link rel="stylesheet" href="~/Content/css/cart.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Ortak CSS -->
    <link rel="stylesheet" href="~/Content/css/layout.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
          integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <header class="header">
        <a href="#" class="logo">
            <img src="~/Content/images/logo.png" alt="logo" />
        </a>

        <nav class="navbar">
            <a href="/Home/Index">Home</a>
            @Html.Action("Menu", "Category")
            <a href="/Home/About">About Us</a>
            <a href="/Home/Contact">Contact</a>
            @Html.Action("Summary","Cart")
            @Html.Partial("_LoginPartial")
        </nav>

        <div class="buttons">
            <button>
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
            <button class="summary">
                <i class="fa-solid fa-cart-shopping"></i>
               
            </button>

            <button onclick="window.location.href='@Url.Action("Login", "Account")'" class="btn btn-primary">
                <i class="fa-solid fa-user"></i> Login
            </button>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-container">
            <div class="footer-row">

                <div class="footer-column">
                    <h4>About Us</h4>
                    <p>We provide high-quality services with a customer satisfaction focus, becoming a leading company in the industry.</p>
                    <a href="@Url.Action("About", "Home")" class="footer-link">Learn More</a>
                </div>


                <div class="footer-column">
                    <h4>Contact</h4>
                    <ul class="footer-list">
                        <li><i class="fas fa-envelope"></i> support@example.com</li>
                        <li><i class="fas fa-phone"></i> +90 123 456 78 90</li>
                        <li><i class="fas fa-map-marker-alt"></i> 123 Main Street, City</li>
                    </ul>
                </div>

                <div class="footer-column">
                    <h4>Quick Links</h4>
                    <ul class="footer-list">
                        <li><a href="/Home/Index"><i class="fas fa-chevron-right"></i> Gizlilik Politikası</a></li>
                        <li><a href="/Home/About"><i class="fas fa-chevron-right"></i> Hizmet Koşulları</a></li>
                        <li><a href="/Home/Contact"><i class="fas fa-chevron-right"></i> Return Policy</a></li>

                    </ul>
                </div>


                <div class="footer-column">
                    <h4>Follow Us</h4>
                    <div class="footer-social-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2024 Your E-Commerce Site. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
