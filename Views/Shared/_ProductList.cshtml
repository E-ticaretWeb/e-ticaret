@using E_SHOPPING_WEB_SITE.Entity
@model IEnumerable<Product>


<section class="highlights">
    <div class="box-container">


        @foreach (var item in Model)
        {
            <div class="box">
                <div class="box-head">
                    <img src="~/Upload/@item.Image" alt="@item.Name">
                    <span class="highlights-category"></span>

                    <h3>
                        <a style="font-size: 1.8rem; margin-top: 1rem; color: #5d462c; text-decoration:none;" href="@Url.Action("Details", "Home", new { id = item.Id })">@item.Name</a>
                    </h3>
                    <p class="box-text"></p>
                    <div class="price">$@item.Price <span>119.99</span></div>
                </div>
                <div class="box-bottom">
                    <a style="margin-top: 1rem; padding: 0.8rem 1.5rem; font-size: 1.2rem; background-color: var(--brown-color); color: white; border-radius: 1rem;"
                       href="#" class="btn">Add to Cart</a>
                </div>
            </div>

        }




    </div>
</section>
